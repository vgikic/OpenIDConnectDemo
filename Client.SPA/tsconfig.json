{
  "compilerOptions": {
    "noImplicitAny": false,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "types": [ "es6-promise", "webpack-env" ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [ "es2016", "dom" ],
    "strictNullChecks": false
  },
  "exclude": [
    "bin",
    "node_modules"
  ]
}
