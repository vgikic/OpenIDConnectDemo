@model Client.SPA.DTO.UserDto;

<app-root params="history: history, basename: basename"></app-root>

@section scripts {
    <script>
        window.User = {
            Id: '@Model.Id',
            Token: '@Model.Token',
            TokenRenewalTime: '@Model.TokenRenewalTime',
            TokenExpirationTime: '@Model.TokenRenewalTime',
            GivenName: '@Model.GivenName',
            FamilyName: '@Model.FamilyName',
            Roles: @Json.Serialize(Model.Roles)
        }
    </script>
    <script src="~/dist/main.js" asp-append-version="true"></script>
}
